@model LogoutViewModel

<div class="logout-page">
    <div class="page-header">
        <h1>
            <img class="icon" src="~/InterneuronIcon.png" height="35">
            Synapse Identity Server
            @*<small>(build {version})</small>*@
        </h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <p>Would you like to logout of Synapse?</p>
            <form asp-action="Logout">
                <input type="hidden" name="logoutId" value="@Model.LogoutId" />
                <fieldset>
                    <div class="form-group">
                        <button class="btn btn-primary">Yes</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>